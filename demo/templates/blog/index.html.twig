{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<section class="articles">
{% for article in articles %}
<article>
<h2>{{ article.title}}</h2><br>
<div class="metadata">written at {{article.createAt | date('d/m/Y')}} a {{article.createAt | date('H:i')}} catgory {{article.category.title}}</div>
<br><br>
<div class="content">
<img src="{{article.image}}" alt="" height="400" width="900"><br><br>
{{article.content | raw}}<br>
<a href={{path('blog_show', {id: article.id})}}" class="btn btn-primary">read more</a>
</div>
</article>
<br>
{% endfor %}
</section>
{% endblock %}
